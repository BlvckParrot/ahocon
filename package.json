{
  "name": "ahocon",
  "version": "0.1.1",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && tsc -p ./tsconfig-build.json && vite build",
    "build:docs": "yarn --cwd docs_editor upgrade ahocon --latest && yarn --cwd docs_editor build && rm -rf docs/* && cp -rf ./docs_editor/dist/* ./docs",
    "preview": "vite preview",
    "test": "uvu -r tsm src/specs",
    "test:watch": "watchlist src/specs -- uvu -r tsm src/specs --ignore testHelpers.ts",
    "prepare": "husky install",
    "format": "pretty-quick",
    "prepublishOnly": "yarn test"
  },
  "dependencies": {
    "ahocon": "^0.1.0",
    "rfdc": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^16",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "tsm": "^2.2.1",
    "typescript": "^4.4.4",
    "uvu": "^0.5.2",
    "vite": "^2.7.2",
    "watchlist": "^0.3.1"
  },
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "description": "a hocon superset",
  "author": "steve_py96",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/steve-py96/ahocon"
  },
  "homepage": "https://steve-py96.github.io/ahocon/",
  "keywords": [
    "ahocon",
    "hocon",
    "json",
    "config",
    "simple"
  ]
}
